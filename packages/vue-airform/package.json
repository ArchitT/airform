{
  "name": "vue-airform",
  "version": "0.0.1",
  "description": "Functional HTML forms for Vue Developers.",
  "homepage": "https://airform.io",
  "repository": "airform/airform",
  "license": "MIT",
  "author": "CJ Patoilo <cjpatoilo@gmail.com>",
  "private": false,
  "main": "dist/vue-airform.common.js",
  "module": "dist/vue-airform.umd.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "🐥",
    "airform",
    "html-forms",
    "forms",
    "mailchimp",
    "mailer",
    "mailgun",
    "saas",
    "sendgrid",
    "sendmail",
    "serverless",
    "smtp",
    "software-as-a-service"
  ],
  "ignore": [
    "*.log",
    ".DS_Store",
    ".cache"
  ],
  "dependencies": {
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/vue": "^2.0.0",
    "@vue/cli-plugin-typescript": "^4.1.2",
    "@vue/cli-plugin-unit-jest": "^4.1.2",
    "@vue/cli-service": "^4.1.2",
    "@vue/test-utils": "1.0.0-beta.29",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "parcel": "^1.12.4",
    "prettier-standard": "^16.1.0",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.5",
    "vue-template-compiler": "^2.6.11"
  },
  "peerDependencies": {
    "vue": ">=2"
  },
  "scripts": {
    "build": "vue-cli-service build --target lib index.ts && rimraf dist/**.html",
    "lint": "prettier-standard --check",
    "server": "parcel example.html",
    "test": "vue-cli-service test:unit index.spec.js"
  },
  "engines": {
    "node": "^12.14.0",
    "npm": "^6.13.0"
  },
  "prettier": {
    "jsxSingleQuote": false,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier-standard --format",
      "git add"
    ]
  },
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.common.js"
  }
}
