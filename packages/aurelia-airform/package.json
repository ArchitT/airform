  "ignore": [
    "*.log",
    ".DS_Store",
    ".cache"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "aurelia-bootstrapper": "^2.3.2",
    "aurelia-cli": "^1.2.3",
    "aurelia-loader-nodejs": "^1.0.1",
    "aurelia-pal-nodejs": "^1.2.0",
    "aurelia-testing": "^1.0.0",
    "aurelia-tools": "^2.0.0",
    "browser-sync": "^2.26.3",
    "connect-history-api-fallback": "^1.6.0",
    "debounce": "^1.2.0",
    "del": "^5.1.0",
    "gulp": "^4.0.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.0",
    "gulp-watch": "^5.0.1",
    "husky": "^4.0.10",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^9.5.0",
    "minimatch": "^3.0.4",
    "prettier-standard": "^16.1.0",
    "promise-polyfill": "^8.1.0",
    "requirejs": "^2.3.6",
    "text": "requirejs/text#latest",
    "through2": "^3.0.0",
